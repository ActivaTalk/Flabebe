{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@assets/*": ["src/assets/*"],
        "@images/*": ["src/assets/images/*"],
        "@icons/*": ["src/assets/icons/*"],
        "@globalCSS": ["src/styles/global.css"]
      }
    }
  
}

